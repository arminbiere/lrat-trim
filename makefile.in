COMPILE=@COMPILE@
all: lrat-trim
lrat-trim: lrat-trim.c makefile
	$(COMPILE) -o $@ $<
clean:
	rm -f lrat-trim makefile
	rm -f test/*/*.log* test/*/*.err* test/*/*.lrat[12]
	rm -f *.gcda *.gcno *.gcov
coverage: test
	gcov lrat-trim.c
format:
	clang-format -i lrat-trim.c
test: lrat-trim
	test/parse/run.sh
	test/regr/run.sh
	test/trim/run.sh
	test/fail/run.sh
	test/check/run.sh
	test/usage/run.sh
.PHONY: all clean coverage format test
